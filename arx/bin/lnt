#!/bin/sh
# lnt - co, lint, edit and ci a source file
SOURCE=$1.c
co -l $SOURCE
OK=1
while [ $OK -ne 0 ]
do
	lint -Xc -D_POSIX_SOURCE -D_XOPEN_SOURCE -I/home/arx/p/arx/inc -u -x \
		$SOURCE >/tmp/$SOURCE.lnt
	me $SOURCE /tmp/$SOURCE.lnt
	rm /tmp/$SOURCE.lnt
	yesno "$SOURCE ok"
	OK=$?
done
rcsdiff $SOURCE | more
ci -u $SOURCE
exit $?
